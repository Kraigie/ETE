<div phx-keydown="move_player" phx-keyup="stop_player" phx-target="window">
  <%= for {id, entity} <- @world.players do %>
    <div style='position: absolute; height: <%= entity.height %>vh; width: <%= entity.width %>vw; left: <%= entity.x_pos %>vw; top: <%= entity.y_pos %>vh; border: solid thin'></div>
  <% end %>
</div>
